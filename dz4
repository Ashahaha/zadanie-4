#include <iostream>
#include <ctime>
using namespace std;

// 1.Заполните массив элементами арифметической прогрессии. Её первый элемент и разность нужно ввести с клавиатуры.
int one(){
    setlocale(LC_ALL, "Russian");
    int mas[10];
    int r = 0;
    cout << "ПЕрвый член массива: "; cin >> mas[0]; cout << "Разница: "; cin >> r;
    for (int i = 1; i < 10; i++) {
        mas[i] = mas[i - 1] + r;
        cout << mas[i - 1] << " ";
    }
    cout << mas[9];
    return 0;
}

// 2. Заполните массив из N элементов случайными целыми числами в диапазоне 1..N так, чтобы в массив обязательно вошли все числа от 1 до N (постройте случайную перестановку).
void two(){
    int a[10];
    int i;
    srand(time(0));
    for (i = 0; i < 10; i++)
        a[i] = 1 + rand() % 10;
    for (i = 0; i < 10; i++)
        cout << a[i] << " ";
}

// 3. Заполните массив случайными числами в диапазоне 1000.2000 и подсчитайте число элементов, у которых вторая с конца цифра – чётная.
int three() {
    int a[5];
    int i; int c = 0;
    srand(time(0));
    for (i = 0; i < 5; i++)
        a[i] = rand() % 1001 + 1000;
    for (i = 0; i < 5; i++) 
        cout << a[i] << " ";
    for (i = 0; i < 5; i++) {
        if (((a[i] % 100) / 10) % 2 == 0) {
            c++;
        }
    }
    cout << c;
    return 0;
}

int main(){
    one();
    two();
    three();
}
